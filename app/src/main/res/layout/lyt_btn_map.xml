<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:padding="8dp"
        android:layout_gravity="center_horizontal|top"
        android:id="@+id/map_btn_fltr_nrby"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/sid_near"
        android:gravity="center|start"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#FFF"
        android:background="@drawable/nearby_offer" />

    <Button
        android:id="@+id/map_btn_fltr_temp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="8dp"
        android:text="@string/sid_temporary"
        android:gravity="center|start"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#FFF"
        android:background="@drawable/temporary_offer"
        android:layout_below="@+id/map_btn_fltr_nrby" />

    <Button
        android:id="@+id/map_btn_fltr_perm"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="8dp"
        android:text="@string/sid_permanent"
        android:gravity="center|start"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#FFF"
        android:background="@drawable/permanent_offer"
        android:layout_below="@+id/map_btn_fltr_temp" />

    <Button
        android:id="@+id/map_btn_go2Profil"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="8dp"
        android:text="@string/sid_profil"
        android:gravity="center|start"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#FFF"
        android:background="@drawable/profil_btn"
        android:layout_below="@+id/map_btn_fltr_perm" />


</RelativeLayout>